<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/header.css">
    <link rel="stylesheet" type="text/css" href="/add.css">
</head>
<%- include('header.ejs') %>
<body>
<div class="shmot-form">
    <form enctype="multipart/form-data" action="/shmot/add" method="post">
        <div class="shmot-form__title">
            Add your shmot here
        </div>
        <div class="shmot-form__input">
            <label>
                <input name="name" placeholder="Name" required>
            </label>
        </div>
        <div class="shmot-form__input">
            <label>
                <input name="description" placeholder="Description" required>
            </label>
        </div>
        <div class="shmot-form__input">
            <label>
                <select name="type">
                    <option value="other">Other</option>
                    <option value="hoodie">Hoodie</option>
                    <option value="socks">Socks</option>
                </select>
            </label>
        </div>
        <div class="shmot-form__input">
            <label>
                <input type="number" name="price" placeholder="Price" required>
            </label>
        </div>
        <div class="shmot-form__input">
            <input type="file" name="photo" placeholder="Add image">
        </div>
        <button type="submit" class="shmot-form__button">Add</button>
    </form>
</div>

</body>
</html>